{
    "manifest_version": 3,
    "name": "Arc Sidebar Extension",
    "version": "1.0",
    "description": "Arc Sidebar Extension",
    "permissions": [
        "tabs",
        "tabGroups",
        "sidePanel",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/toolbar.js"
            ],
            "css": [
                "css/toolbar.css"
            ]
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_title": "Click to open panel",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },
    "commands": {
        "open": {
            "suggested_key": {
                "default": "Ctrl+Shift+S"
            },
            "description": "Open sidebar"
        },
        "toolbar": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q"
            },
            "description": "Toogle toolbar"
        }
    }
}